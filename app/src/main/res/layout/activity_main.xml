<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#20000000"
    tools:context=".Login_activity"
    android:orientation="vertical">

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
 >
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/bg_login_card"
         android:orientation="vertical"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_gravity="center"
         android:layout_marginTop="35dp"
         android:layout_marginBottom="20dp"
         android:padding="20pt"
         android:gravity="center"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="تسجيل الدخول "
             android:textColor="@color/black"
             android:textStyle="bold"
             android:textSize="13pt"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="مرحبا"
             android:textColor="#86000000"
             android:layout_marginTop="6pt"
             android:textSize="7pt"
             />

         <com.google.android.material.textfield.TextInputLayout
             android:layout_width="match_parent"
             android:layout_height="52dp"
             app:hintEnabled="false"
             android:layout_marginTop="7pt"
             >

             <EditText
                 android:id="@+id/et_email"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
                 android:layout_marginTop="15pt"
                 android:autofillHints="emailAddress"
                 android:background="@drawable/bg_info_login"
                 android:hint="Email Address"
                 android:inputType="textEmailAddress"
                 android:paddingLeft="7pt">

             </EditText>
         </com.google.android.material.textfield.TextInputLayout>

         <com.google.android.material.textfield.TextInputLayout
             android:layout_width="match_parent"
             android:layout_height="52dp"
             app:hintEnabled="false"
             app:passwordToggleEnabled="true"
             android:layout_marginTop="7pt"
             >
             <EditText
                 android:id="@+id/et_password"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
                 android:paddingLeft="7pt"
                 android:hint="Password"
                 android:inputType="textPassword"
                 android:autofillHints="emailAddress"
                 android:background="@drawable/bg_info_login"
                 >
             </EditText>

         </com.google.android.material.textfield.TextInputLayout>

         <androidx.cardview.widget.CardView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10pt"
             android:background="?attr/selectableItemBackgroundBorderless"
             app:cardCornerRadius="6pt"
             app:cardBackgroundColor="#6245a1"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textStyle="bold"
                 android:textColor="@color/white"
                 android:text="Login"
                 android:paddingLeft="15pt"
                 android:textSize="8pt"
                 android:paddingRight="15pt"
                 android:paddingTop="5pt"
                 android:paddingBottom="5pt"
                 >

             </TextView>

         </androidx.cardview.widget.CardView>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="10pt">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Already Have An Account?"
                 >

             </TextView>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Sign In"
                 android:background="@drawable/textlines"
                 >

             </TextView>
         </LinearLayout>

     </LinearLayout>
 </ScrollView>

</LinearLayout>